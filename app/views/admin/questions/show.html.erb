<div class="col-md-4">
  <%= form_for [:admin, @category, @question], class: "form" do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.label t "admin.question.question" %>
      <%= f.text_field :content, class: "form-control" %>
    </div>
    <div class="form-group" id="means">
      <div id="answer_list">
        <%= f.fields_for :answers, wrapper: true do |answer_form| %>
          <%= render "shared/error_messages", object: answer_form.object %>
          <div class="row answer-form">
            <div class="col-md-5">
              <%= answer_form.label t "admin.question.answer" %>
              <%= answer_form.text_field :content, required: true, class: "form-control" %>
            </div>
            <div class="col-md-3">
              <%= answer_form.label t "correct" %>
              <%= answer_form.check_box :status, class: "checkbox" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <br>
  <% end %>
</div>
