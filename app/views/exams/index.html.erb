<% if user_signed_in? %>
  <h1><%= t "exams.all_exams" %></h1>
  <div class="row">
    <%= form_for current_user.exams.new, html: {class: "form-inline"} do |f| %>
      <div class="col-md-6 col-md-offset-2">
        <%= f.collection_select :category_id, Category.all, :id, :name, {}, {class: "form-control"} %>
      </div>
      <div class="ex-submit">
        <%= f.submit t("exams.start_new"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <%= will_paginate @exams %>
  <%= render @exams %>
  <%= will_paginate @exams %>
<% end %>
